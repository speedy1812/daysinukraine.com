<!doctype html>
<html>
  <head>
    <%= partial "partials/head" %>
  </head>
  <body class="my-2 bg-gray-300">
    <main class="mx-auto my-0 bg-gray-100 shadow-lg max-w-screen-lg">
      <%= partial "partials/header" %>
      <section class="text-gray-900 grid grid-cols-4">
        <div class="px-10 content-main col-span-3">
          <h1 class="article__post-title"><%= current_article.title unless current_article.nil? %></h2>
          <p class="article__date-author">
            <%= 'Posted on ' + current_article.date.strftime('%B %e, %G') unless current_article.nil? %>
            <%= 'by ' + current_article.data.author unless current_article.nil? or current_article.data.author.nil? %>
          </p>
          <%= yield %>
        </div>
        <%= partial "partials/sidebar" %>
      </section>
      <%= partial "partials/footer" %>
    </main>
  </body>
</html>
