---
pageable: true
per_page: 4
---
<% if prev_page %>
	<p class="forward-backward-links">
		<%= link_to '&larr; Previous page', prev_page %>
	</p>
<% end %>
<% page_articles.each_with_index do |article, i| %>
	<article class="article">
		<h2 class="article__post-title">
			<%= link_to article.title, article %>
		</h2>
		<p class="article__date-author">
			<%= 'Posted on ' + article.date.strftime('%B %e, %G') %>
			<%= 'by ' + article.data.author unless article.data.author.nil? %>
		</p>
		<%= article.body %>
	</article>
<% end %>
<% if paginate %>
	<% if next_page %>
		<p class="forward-backward-links">
			<%= link_to 'Next page &rarr;', next_page %>
		</p>
	<% end %>
<% end %>
