<%= tag "meta", charset: "utf-8" %>
<%= tag "meta", "http-equiv": "X-UA-Compatible", content: "IE=edge;chrome=1" %>
<%= tag "meta", name: "viewport",
  content: "width=device-width, initial-scale=1" %>
<%= tag "meta", name: "google-site-verification", content: "IUTs7LYI2OlsB7iXzTkCjAZmGeLMxccYMWSPM0rpXsg" %>

<%= tag "link", rel: "icon", type: "image/png",
  href: image_path("favicon.png")  %>
<%= tag "link", rel: "apple-touch-icon",
  href: image_path("apple-touch-icon.png")  %>

<%= stylesheet_link_tag "site" %>
<%= javascript_include_tag "bundle", async: true %>

<%= tag "meta", property: "og:site_name", content: data.site.site_name %>

<% if content_for?(:og_tags) %>
  <%= yield_content :og_tags %>
<% else %>
  <%= tag "meta", property: "og:url", content: data.site.url %>
  <%= tag "meta", property: "og:title", content: data.site.title %>
  <%= tag "meta", property: "og:image", content: data.site.image %>
  <%= tag "meta", property: "og:description", content: data.site.description %>
  <%= tag "meta", property: "og:type", content: data.site.website %>
<% end %>

<title>
  <%= "#{current_page.data.title} - " unless current_page.data.title.nil? %>
  Nathan & Katelin Day
</title>
<%= feed_tag :atom, "#{blog.options.prefix}/feed.xml", title: "Atom Feed" %>
