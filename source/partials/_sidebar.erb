<aside class="sidebar">
	<div class="sidebar__item">
		<h2>Our Ministries</h2>
		<ol>
			<li>
				<%= link_to 'Euro Team Outreach', 'http://euroteamoutreach.org', target: :_blank %>
			</li>
			<li>
				<%= link_to 'Bible First', 'http://getbiblefirst.com', target: :_blank %>
			</li>
			<li>
				<%= link_to 'Carpathian Mountain Outreach', 'http://cmoproject.org', target: :_blank %>
			</li>
		</ol>
	</div>
	<div class="sidebar__item">
		<h2>Recent Posts</h2>
		<ol>
			<% blog.articles[0...5].each do |article| %>
				<li>
					<%= link_to article.title, article %>
					<span class="sidebar__post-dates">
						<%= article.date.strftime('%b %e') %>
					</span>
				</li>
			<% end %>
		</ol>
	</div>
	<div class="sidebar__item">
		<h2>Tags</h2>
		<ol>
			<% blog.tags.each do |tag, articles| %>
				<li>
					<%= link_to "#{tag} (#{articles.size})", tag_path(tag) %>
				</li>
			<% end %>
		</ol>
	</div>
	<div class="sidebar__item">
		<h2>By Year</h2>
		<ol>
			<% blog.articles.group_by {|a| a.date.year }.each do |year, articles| %>
				<li>
					<%= link_to "#{year} (#{articles.size})", blog_year_path(year) %>
				</li>
			<% end %>
		</ol>
	</div>
</aside>
