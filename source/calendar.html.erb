---
pageable: true
---

<h1 class="mb-4">
	Archive for
	<% case page_type %>
	<% when 'day' %>
		<%= Date.new(year, month, day).strftime('%b %e %Y') %>
	<% when 'month' %>
		<%= Date.new(year, month, 1).strftime('%b %Y') %>
	<% when 'year' %>
		<%= year %>
	<% end %>
</h1>

<% if paginate && num_pages > 1 %>
	<p>Page <%= page_number %> of <%= num_pages %></p>
	<% if prev_page %>
    <p class="forward-backward-links">
      <%= link_to '&larr; Previous page', prev_page %>
    </p>
	<% end %>
<% end %>

<ul>
	<% page_articles.each_with_index do |article, i| %>
		<li>
      <%= link_to article.title, article %>
      <span class="small-dates"><%= article.date.strftime('%b %e') %></span>
		</li>
	<% end %>
</ul>

<% if paginate %>
	<% if next_page %>
    <p class="forward-backward-links">
      <%= link_to 'Next page &rarr;', next_page %>
    </p>
	<% end %>
<% end %>
